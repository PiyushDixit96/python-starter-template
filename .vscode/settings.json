{
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4
  },
  "[toml]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "python.analysis.autoFormatStrings": true,

  // for import autosuggest
  "python.analysis.indexing": true,
  "python.analysis.autoImportCompletions": true,

  // TODO I had issues with develop = True imports, but it was fixed :/
  // "python.analysis.extraPaths": [
  //   "~/Projects/python"
  // ],

  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 3
    }
    //   {"name":"pdf2image", "depth":3, "includeAllSymbols": true},
    //   {"name":"schema", "depth":3, "includeAllSymbols": true},
  ],

  // "flake8.importStrategy": "fromEnvironment",

  "cSpell.words": ["sqlmodel", "sqlalchemy", "sqltypes", "openai", "httpx", "structlog"],
  "cSpell.enableFiletypes": ["jinja-html"],
}